<Window x:Class="ege_math_trainer.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="350" Width="380" Background="#FFF5F7FF"
        WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="ЕГЭ по математике" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" 
                   Foreground="#FF6C63FF"/>
        <StackPanel Margin="5">
            <Label Content="Логин" FontSize="25" FontWeight="SemiBold" Foreground="#7366BD"/>
            <TextBox Name="BoxLogin" FontSize="18" Width="300" Height="30" BorderBrush="#FF9D9BFF"/>
        </StackPanel>
        <StackPanel Margin="5">
            <Label Content="Пароль" FontSize="25" FontWeight="SemiBold" Foreground="#7366BD"/>
            <TextBox Name="BoxPassword" FontSize="18" Width="300" Height="30" BorderBrush="#FF9D9BFF"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="Войти" FontSize="20" Click="ButtonAuth" Height="40" Width="80" Margin="5" 
                    Foreground="White" Background="#FF9D9BFF"/>
            <Button Content="Регистрация" FontSize="20" Click="ButtonAuthReg" Height="40" Width="140" 
                    Background="#C5A6FF" Foreground="White" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
