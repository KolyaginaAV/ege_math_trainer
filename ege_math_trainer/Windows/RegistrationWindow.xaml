<Window x:Class="ege_math_trainer.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="600" Width="570">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Регистрация" FontSize="30" HorizontalAlignment="Center" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Логин" FontSize="25"/>
            <TextBox Name="BoxRegLogin" Width="450"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Пароль" FontSize="25"/>
            <TextBox Name="BoxRegPassword" Width="434"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Фамилия" FontSize="25"/>
            <TextBox Name="BoxRegSurname" Width="417"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Имя" FontSize="25"/>
            <TextBox Name="BoxRegName" Width="471"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Отчество" FontSize="25"/>
            <TextBox Name="BoxRegPatronymic" Width="415"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Номер телефона" FontSize="25"/>
            <TextBox Name="BoxRegPhone" Width="329"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Почта" FontSize="25"/>
            <TextBox Name="BoxRegEmail" Width="453"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Роль" FontSize="25"/>
            <StackPanel Margin="10 0 0 0">
                <RadioButton GroupName="Role" Content="Учитель" FontSize="20"/>
                <RadioButton GroupName="Role" IsChecked="True" Content="Ученик" FontSize="20"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" FontSize="25" Click="ButtonReg" Width="250" Height="50" Margin="5"/>
            <Button Content="Отмена" FontSize="25" Click="ButtonRegCancel" Width="130" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
