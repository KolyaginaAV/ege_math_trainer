<Window x:Class="ege_math_trainer.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="Окно регистрации" SizeToContent ="WidthAndHeight" WindowStartupLocation = "CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Регистрация" FontSize="30" HorizontalAlignment="Center" Margin="5" FontWeight="Bold" />
        <StackPanel Margin="10 5 10 5">
            <Label Content="Логин" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegLogin" FontSize="18" Width="490" Height="35" VerticalContentAlignment ="Center"  HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10 5 10 5">
            <Label Content="Пароль" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegPassword" FontSize="18" Width="490" Height="35" VerticalContentAlignment ="Center" HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10 5 10 5">
            <Label Content="Фамилия" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegSurname" FontSize="18" Width="490" Height="35" VerticalContentAlignment ="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10 5 10 5">
            <Label Content="Имя" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegName" FontSize="18" Height="35" Width="490" VerticalContentAlignment ="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10 5 10 5">
            <Label Content="Отчество" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegPatronymic" FontSize="18" Width="490" Height="35" VerticalContentAlignment ="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10 5 10 5">
            <Label Content="Номер телефона" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegPhone" FontSize="18" Height="35" Width="490" VerticalContentAlignment ="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10 5 10 5">
            <Label Content="Почта" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="BoxRegEmail" FontSize="18" Width="490" Height="35" VerticalContentAlignment ="Center" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 5 10 5">
            <Label Content="Роль" FontSize="20" FontWeight="Bold"/>
            <StackPanel Margin="15 0 0 0">
                <RadioButton Name ="RadioButtonTeacher" GroupName="Role" Content="Учитель" FontSize="20"/>
                <RadioButton Name ="RadioButtonStudent" GroupName="Role" IsChecked="True" Content="Ученик" FontSize="20"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" FontSize="25" Click="ButtonReg" Width="250" Height="50" Margin="5"/>
            <Button Content="Отмена" FontSize="25" Click="ButtonRegCancel" Width="130" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
