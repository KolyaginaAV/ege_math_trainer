<Window x:Class="ege_math_trainer.Windows.TaskEvaluationCriteriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="TaskEvaluationCriteriaWindow" Width="600" SizeToContent ="Height" Left="800" Top="10"
        Background="#FFF5F7FF">
    <StackPanel>
        <TextBlock Name="NameCriteriaTask" FontSize="30" HorizontalAlignment="Center" Margin="5"
                   FontWeight="Bold" Foreground="#FF6C63FF"/>
        <TextBlock Name="TextBlockCriteria" TextWrapping = "Wrap" Margin="8" FontSize="15"/>
        <Image Name="ImageCriteria" Margin="10 0 10 0"/>
        <StackPanel  Margin="10 0 0 0">
            <TextBlock Text="Критерии по этому примеру задания:" FontSize="17" FontWeight="SemiBold"/>
            <TextBlock Name="TextBlockIndCriteria" TextWrapping = "Wrap" FontSize="15"/>
        </StackPanel>
        <Button Content="Вернуться к заданию" FontSize="18" Click="ButtonDecisionCansel" Background="#a5a894"
                Foreground="Beige" Height="40" Width="200" Margin="0 15 0 10"/>
    </StackPanel>
</Window>
