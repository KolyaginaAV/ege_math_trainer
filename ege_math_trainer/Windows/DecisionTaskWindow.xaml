<Window x:Class="ege_math_trainer.Windows.DecisionTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="DecisionTaskWindow" Width="950" SizeToContent ="Height" Left="550" Top="0" Background="#FFF5F7FF">
    <StackPanel>
        <TextBlock Text="Решение" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FF6C63FF"/>
        <TextBlock Name="NameTaskDecision" FontSize="30" HorizontalAlignment="Center" Margin="5" FontWeight="Bold" Foreground="#FF6C63FF"/>
        <StackPanel Margin="5">
            <TextBlock Text="Условие" FontSize="22" Foreground="#FF333333" FontWeight="SemiBold"/>
            <TextBlock Name="TextBlockDecisionCondition" TextWrapping = "Wrap" FontSize="18" Margin="0 3 0 0"/>
            <Image Name="ImageDecisionCondition" MaxHeight="200" MaxWidth="200"/>
        </StackPanel>
        <StackPanel Margin="10 0 10 0">
            <TextBlock Text="Решение" FontSize="22" Foreground="#FF333333" FontWeight="SemiBold"/>
            <TextBlock Name="TextBlockDecision" TextWrapping = "Wrap" FontSize="18" Margin="0 3 0 0"/>
            <Image Name="ImageDecision" MaxHeight="200" MaxWidth="200"/>
        </StackPanel>
        <StackPanel Name="PanelDecisionAnswer" Visibility="Collapsed" Orientation="Horizontal">
            <TextBlock Text="Правильный ответ: " FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Foreground="#FF333333" FontWeight="SemiBold"/>
            <TextBlock Name="TextBlockDecisionRightAnswer" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="#FF333333" FontWeight="SemiBold"/>
        </StackPanel>
        <Button Content="Вернуться к заданию" FontSize="18" Click="ButtonDecisionCansel" Background="#a5a894"
                Foreground="Beige" Height="40" Width="200" Margin="0 15 0 10"/>
    </StackPanel>
</Window>
