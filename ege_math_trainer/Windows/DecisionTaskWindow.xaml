<Window x:Class="ege_math_trainer.Windows.DecisionTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="DecisionTaskWindow" Height="420" Width="500">
    <StackPanel>
        <TextBlock Text="Задание 13: Уравнения" FontSize="30" HorizontalAlignment="Center" Margin="5"/>
        <TextBlock Text="Решение" FontSize="30" HorizontalAlignment="Center"/>
        <StackPanel Margin="5">
            <TextBlock Text="Условие" FontSize="22"/>
            <TextBlock Name="TextBlockDecisionCondition" TextWrapping = "Wrap" FontSize="18" Margin="0 3 0 0"/>
            <Image Name="ImageDecisionCondition"/>
        </StackPanel>
        <StackPanel Margin="5">
            <TextBlock Text="Решение" FontSize="22"/>
            <TextBlock Name="TextBlockDecision" TextWrapping = "Wrap" FontSize="18" Margin="0 3 0 0"/>
            <Image Name="ImageDecision"/>
        </StackPanel>
        <StackPanel Name="PanelDecisionAnswer" Visibility="Collapsed" Orientation="Horizontal">
            <TextBlock Text="Правильный ответ: " FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Name="TextBlockDecisionRightAnswer" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Content="Вернуться к заданию" FontSize="18" Click="ButtonDecisionCansel" Height="40" Width="200" Margin="0 15 0 0"/>
    </StackPanel>
</Window>
