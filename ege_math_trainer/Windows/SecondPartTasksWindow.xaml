<Window x:Class="ege_math_trainer.Windows.SecondPartTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ege_math_trainer.Windows"
        mc:Ignorable="d"
        Title="SecondPartTasksWindow" Width="700" SizeToContent ="Height" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Name="SecondPartTaskTitle" TextWrapping = "Wrap" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FF6C63FF"/>
        <StackPanel Margin="10 5 5 5">
            <TextBlock Text="Условие" Foreground="#7366BD" FontWeight="SemiBold" FontSize="22"/>
            <TextBlock Name="TextBlockConditionSecondPartTask" TextWrapping = "Wrap" FontSize="18" Margin="0 3 0 0"/>
            <Image Name ="ImageConditionSecondPartTask" MaxHeight="200" MaxWidth="200" Margin="0 10 0 0"/>
        </StackPanel>
        <StackPanel Margin="10 7 7 7">
            <TextBlock Text="Для записей (решения)" Foreground="#7366BD" FontWeight="SemiBold" FontSize="22"/>
            <TextBox FontSize="18" Height="60" TextWrapping = "Wrap" Width="670" Margin="0 5 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="7">
            <Button Content="Посмотреть решение" Click="ButtonSecondPartTasksDecision" 
                    Foreground="Honeydew" Background="#FF9D9BFF" FontSize="18" Width="200" Height="40"/>
            <Button Content="Проверить себя по критериям" Click="ButtonSecondPartTasksCriteria" 
                    Foreground="Honeydew" Background="#FF9D9BFF" FontSize="18"  Width="280" Height="40" Margin="5 0 0 0"/>
        </StackPanel>
        <Button Content="К следующему заданию" Background="#C5A6FF" Foreground="White" FontSize="18"  Width="220" Height="40"
                Click="ButtonSecondPartTasksNextTask"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="7">
            <Button Content="Выход" Click="ButtonSecondPartTasksCansel" FontSize="18" Width="100" Height="40"
                    Background="#C0C0C0" Foreground="Beige"/>
            <Button Content="Вернуться к выбору задания" Click="ButtonSecondPartTasksCanselToMain" FontSize="18" 
                    Background="#C0C0C0" Foreground="Beige" Width="255" Height="40" Margin="5 0 0 0"/>
        </StackPanel>
    </StackPanel>
</Window>
